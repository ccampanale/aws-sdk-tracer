{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "angular": true
    },    
    "extends": "tslint:recommended",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            true,
            "spaces"
        ],
        "linebreak-style": true,
        "quotes": [
            "error",
            "single"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "keyword-spacing": [
            2,
            {
                "before": true, 
                "after": true
            }
        ],
        "no-console": false,
        "max-classes-per-file": false,
        "object-literal-sort-keys": false,
        "trailing-comma": [
            true,
            {
              "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
              },
              "esSpecCompliant": true
            }
        ]
    }
}
